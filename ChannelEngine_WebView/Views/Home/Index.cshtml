@{
    ViewData["Title"] = "Channel Engine Home";
}

<div class="text-center">
    <h1 class="display-4">Top Products Sold</h1>

    <table style="margin:0 auto; margin-top: 30px;">
        <thead>
            <tr>
                <th style="border:1px solid #000; padding: 15px">Product</th>
                <th style="border:1px solid #000; padding: 15px">Gtin</th>
                <th style="border:1px solid #000; padding: 15px">Total Quantity</th>
                <th style="border:1px solid #000; padding: 15px">Add Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ViewBag.TopProducts)
            {
            <tr>
                <td style="border:1px solid #000; padding: 15px">@product.ProductName</td>
                <td style="border:1px solid #000; padding: 15px">@product.Gtin</td>
                <td style="border:1px solid #000; padding: 15px">@product.TotalQuantity</td>
                <td style="border:1px solid #000; padding: 15px">@Html.ActionLink("Set Stock Level to 25", "AddStock", "Home", new
                                                            {
                                                                merchantRefNumber = product.MerchantProductNo
                                                            })</td>
            </tr>

            }
        </tbody>
    </table>

    @if (ViewBag.AddStockResult != "")
            {
                <div style="text-align:center">
                    <h3>@ViewBag.AddStockResult</h3>
                </div>
            }
</div>
